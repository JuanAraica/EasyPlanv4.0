@model Modales.Models.Tbl_Adelantos

@{ ViewBag.Title = @Html.DisplayFor(model => model.Tbl_Trabajador.Nombre) + " " + @Html.DisplayFor(model => model.Tbl_Trabajador.Apellido) + " Advance's Details"; }
@Scripts.Render("~/bundles/jqueryval")
 
<section>
    <div class="modal-shadow text-center">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4>@ViewBag.Title</h4>
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>
                Worker
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Tbl_Trabajador.Nombre) @Html.DisplayFor(model => model.Tbl_Trabajador.Apellido)
            </dd>
            <dt>
                Value
            </dt>

            <dd>
                ₡  @Html.DisplayFor(model => model.Monto)
            </dd>

            <dt>
                Date
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FechaAdelanto)
            </dd>

            <dt>
                Issuing
            </dt>

            <dd>
                @Html.DisplayFor(model => model.EmisorAdelento)
            </dd>

        </dl>
    </div>
    </div>
</section>
