@model Modales.Models.Tbl_Adelantos

@{ ViewBag.Title = "Add New Advance"; }
@Scripts.Render("~/bundles/jqueryval")



<section>
    @using (Html.BeginForm())
    {
@Html.AntiForgeryToken()
                <div class="modal-shadow text-center">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h4>@ViewBag.Title</h4>
                        </div>
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="panel-body">

                        <div class="form-group">
                            <div class="text-center">
                                <span style="margin: 0 auto;">Value</span>
                                @Html.TextBoxFor(m => m.Monto,
                                          new
                                          {
                                              @class = "form-control",
                                              placeholder = "Value",
                                              style = "margin: 0 auto;"
                                          })
                                @Html.ValidationMessageFor(m => m.Monto, "", new { @class = "text-info" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="text-center">
                                <span style="margin: 0 auto;">Issuing</span>
                                @Html.TextBoxFor(m => m.EmisorAdelento,
                                               new
                                               {
                                                   @class = "form-control",
                                                   placeholder = "Issuing",
                                                   style = "margin: 0 auto;"
                                               })
                                @Html.ValidationMessageFor(m => m.EmisorAdelento, "", new { @class = "text-info" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="text-center">
                                <span style="margin: 0 auto;">Date</span>
                                @Html.TextBoxFor(m => m.FechaAdelanto,
                                          new
                                          {
                                              @class = "form-control",
                                              placeholder = @HttpUtility.HtmlDecode(Html.DisplayNameFor(m => m.FechaAdelanto).ToHtmlString()),
                                              style = "margin: 0 auto;",
                                              type = "date",
                                              text = "Date of birth"
                                          })
                                @Html.ValidationMessageFor(m => m.FechaAdelanto, "", new { @class = "text-info" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div>
                                <input type="submit" value="Save" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </div>}
</section>