@model Modales.Models.Tbl_Clientes
@{
    ViewBag.Title = "Add New Client";
}
@Scripts.Render("~/bundles/jqueryval")


<section>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="modal-shadow text-center">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4>@ViewBag.Title</h4>
                </div>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="panel-body">
                <div class="form-group">
                    <div class="text-center">
                        @Html.TextBoxFor(m => m.NombreCliente,
                        new
                        {
                            @class = "form-control",
                            placeholder = "Name",
                            style = "margin: 0 auto;"
                        })
                        @Html.ValidationMessageFor(m => m.NombreCliente, "", new { @class = "text-info" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="text-center">
                        @Html.TextBoxFor(m => m.Contacto,
                        new
                        {
                            @class = "form-control",
                            placeholder = "Contact",
                            style = "margin: 0 auto;"
                        })
                        @Html.ValidationMessageFor(m => m.Contacto, "", new { @class = "text-info" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="text-center">
                        @Html.TextBoxFor(m => m.Direccion,
                        new
                        {
                            @class = "form-control",
                            placeholder = "Direction",
                            style = "margin: 0 auto;"
                        })
                        @Html.ValidationMessageFor(m => m.Direccion, "", new { @class = "text-info" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="text-center">
                        @Html.TextBoxFor(m => m.Telefono,
                        new
                        {
                            @class = "form-control",
                            placeholder = "Phone",
                            style = "margin: 0 auto;"
                        })
                        @Html.ValidationMessageFor(m => m.Telefono, "", new { @class = "text-info" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="text-center">
                        @Html.TextBoxFor(m => m.Email,
                        new
                        {
                            @class = "form-control",
                            placeholder = "E-mail",
                            style = "margin: 0 auto;"
                        })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-info" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="text-center">
                        @Html.TextBoxFor(m => m.Proyecto,
                        new
                        {
                            @class = "form-control",
                            placeholder = "Project",
                            style = "margin: 0 auto;"
                        })
                        @Html.ValidationMessageFor(m => m.Proyecto, "", new { @class = "text-info" })
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    }
</section>
