@model IEnumerable<Modales.Models.Tbl_Clientes>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Index</h2>

<h3>@Html.ActionLink("Nuevo", "CreateModal", null, new { data_modal = "" })</h3>
<br />
<table class="table table-striped" style="text-align:center">
    <thead class="table-success" style="text-align:center">
        <tr style="text-align:center">
            <th scope="col">
                Name
            </th>
            <th scope="col">
                Contact
            </th>
            <th scope="col">
                Direction
            </th>
            <th scope="col">
                Phone
            </th>
            <th scope="col">
                E-mail
            </th>
            <th scope="col">
                Project
            </th>
            <th colspan="3"><span>Actions</span></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)

        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreCliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contacto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Proyecto)
                </td>
                <td>

                    <span class="btn btn-success">@Html.ActionLink("Edit", "EditClient", new { id = item.NombreCliente }, new { data_modal = "" })</span>
                    <span class="btn btn-info">@Html.ActionLink("Details", "Details", new { id = item.NombreCliente }, new { data_modal = "" }) </span >
                    <span class="btn btn-danger">@Html.ActionLink("Delete", "Delete", new { id = item.NombreCliente }, new { data_modal = "" })</span>
</td>
            </tr>
        }
    </tbody>
</table>