@model IEnumerable<Modales.Models.Tbl_Jornada>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<style>
    body {
        background: #0094ff;
        font-family: 'Roboto', sans-serif;
    }

    h1 {
        font-size: 2.8rem;
        color: #fff;
        margin: 40px 0 20px 0;
        text-align: center;
    }

    h1 {
        font-size: 30px;
        color: #fff;
        text-transform: uppercase;
        font-weight: 300;
        text-align: center;
        margin-bottom: 15px;
    }

    table {
        width: 100%;
        table-layout: fixed;
    }

    .tbl-header {
        background-color: rgba(255,255,255,0.3);
    }

    .tbl-content {
        height: 300px;
        overflow-x: auto;
        margin-top: 0px;
        border: 1px solid rgba(255,255,255,0.3);
    }

    th {
        padding: 20px 15px;
        text-align: left;
        font-weight: 500;
        font-size: 12px;
        color: #000;
        text-transform: uppercase;
    }

    td {
        padding: 15px;
        text-align: left;
        vertical-align: middle;
        font-weight: 300;
        font-size: 12px;
        color: #000;
        border-bottom: solid 1px rgba(255,255,255,0.1);
    }
    /* demo styles */
    section {
        margin: 50px;
        background: -webkit-linear-gradient(left, #25c481, #25b7c4);
        background: linear-gradient(to right, #25c481, #25b7c4);
        font-family: 'Roboto', sans-serif;
    }
    /* follow me template */
    .made-with-love {
        margin-top: 40px;
        padding: 10px;
        clear: left;
        text-align: center;
        font-size: 10px;
        font-family: arial;
        color: #fff;
    }

        .made-with-love i {
            font-style: normal;
            color: #F50057;
            font-size: 14px;
            position: relative;
            top: 2px;
        }

        .made-with-love a {
            color: #fff;
            text-decoration: none;
        }

            .made-with-love a:hover {
                text-decoration: underline;
            }

    ::-webkit-scrollbar {
        width: 6px;
    }

    ::-webkit-scrollbar-track {
        -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
    }

    ::-webkit-scrollbar-thumb {
        -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
    }
</style>




<link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">


<p>
    <h3 style="text-align:center;">
        <span class="btn btn-info col-sm-4">
            @Html.ActionLink("New Carga", "CreateJornadaCarga", null, new { data_modal = "" })
        </span>
    </h3>
    <h3 style="text-align:center;">
        <span class="btn btn-warning col-sm-4">
            @Html.ActionLink("New Contrato", "CreateJornadaContrato", null, new { data_modal = "" })
        </span>
    </h3>
    <h3 style="text-align:center;">
        <span class="btn btn-info col-sm-4">
            @Html.ActionLink("New Corta", "CreateJornadaCorta", null, new { data_modal = "" })
        </span>
    </h3>
</p>
<p>
    <h3 style="text-align:center;">
        <span class="btn btn-warning col-sm-3">
            @Html.ActionLink("New Siembra", "CreateJornadaSiembra", null, new { data_modal = "" })
        </span>
    </h3>
    <h3 style="text-align:center;">
        <span class="btn btn-info col-sm-3">
            @Html.ActionLink("New Retapa", "CreateJornadaRetapa", null, new { data_modal = "" })
        </span>
    </h3>
    <h3 style="text-align:center;">
        <span class="btn btn-warning col-sm-3">
            @Html.ActionLink("New Descarga", "CreateJornadaDescarga", null, new { data_modal = "" })
        </span>
    </h3>
    <h3 style="text-align:center;">
        <span class="btn btn-info col-sm-3">
            @Html.ActionLink("New Hora", "CreateJornadaHora", null, new { data_modal = "" })
        </span>
    </h3>
</p>


<section>
    <h1>Advance's Registry</h1>
    <div class="tbl-header">
        <table cellpadding="0" cellspacing="0" border="0">
            <thead>
                <tr>
                    <th>
                        Worker
                    </th>
                    <th>
                        Type Jornada
                    </th>
                    <th>
                        Measurement unit
                    </th>
                    <th>
                        Measure price
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        Day's Value
                    </th>
                    <th>
                        Observation
                    </th>
                    <th><span>Actions</span></th>
                </tr>
            </thead>
        </table>
    </div>
    <div class="tbl-content">
        <table cellpadding="0" cellspacing="0" border="0">
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tbl_Trabajador.Nombre) @Html.DisplayFor(modelItem => item.Tbl_Trabajador.Apellido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TipoJornada)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UnidadMedida)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PrecioUnidadMedida)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaJornada)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ValorJornada)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Observacion)
                        </td>
                        @if (item.TipoJornada == "Corta")
                        {
                            <td>
                                <span class="btn btn-success">
                                    @Html.ActionLink("Edit Corta", "EditJornadaCorta", new { id = item.idJornada }, new { data_modal = "" })
                                </span>
                                <span class="btn btn-info">
                                    @Html.ActionLink("Details", "Details", new { id = item.idJornada }, new { data_modal = "" })
                                </span>
                                <span class="btn btn-danger">
                                    @Html.ActionLink("Delete", "Delete", new { id = item.idJornada }, new { data_modal = "" })
                                </span>
                            </td>
                        }
                        @if (item.TipoJornada == "Siembra")
                        {
                            <td>
                                <span class="btn btn-success">
                                    @Html.ActionLink("Edit Siembra", "EditJornadaSiembra", new { id = item.idJornada }, new { data_modal = "" })
                                </span>
                                <span class="btn btn-info">
                                    @Html.ActionLink("Details", "Details", new { id = item.idJornada }, new { data_modal = "" })
                                </span>
                                <span class="btn btn-danger">
                                    @Html.ActionLink("Delete", "Delete", new { id = item.idJornada }, new { data_modal = "" })
                                </span>
                            </td>
                        }
                        @if (item.TipoJornada == "Carga")
                        {
                            <td>
                                <span class="btn btn-success">
                                    @Html.ActionLink("Edit Carga", "EditJornadaCarga", new { id = item.idJornada }, new { data_modal = "" })
                                </span>
                                <span class="btn btn-info">
                                    @Html.ActionLink("Details", "Details", new { id = item.idJornada }, new { data_modal = "" })
                                </span>
                                <span class="btn btn-danger">
                                    @Html.ActionLink("Delete", "Delete", new { id = item.idJornada }, new { data_modal = "" })
                                </span>
                            </td>
                        }
                        @if (item.TipoJornada == "Descarga")
                        {
                            <td>
                                <span class="btn btn-success">
                                    @Html.ActionLink("Edit", "EditJornadaDescarga", new { id = item.idJornada }, new { data_modal = "" })
                                </span>
                                <span class="btn btn-info">
                                    @Html.ActionLink("Details", "Details", new { id = item.idJornada }, new { data_modal = "" })
                                </span>
                                <span class="btn btn-danger">
                                    @Html.ActionLink("Delete", "Delete", new { id = item.idJornada }, new { data_modal = "" })
                                </span>
                            </td>
                        }
                        @if (item.TipoJornada == "Retapa")
                        {
                            <td>
                                <span class="btn btn-success">
                                    @Html.ActionLink("Edit", "EditJornadaRetapa", new { id = item.idJornada }, new { data_modal = "" })
                                </span>
                                <span class="btn btn-info">
                                    @Html.ActionLink("Details", "Details", new { id = item.idJornada }, new { data_modal = "" })
                                </span>
                                <span class="btn btn-danger">
                                    @Html.ActionLink("Delete", "Delete", new { id = item.idJornada }, new { data_modal = "" })
                                </span>
                            </td>
                        }
                        @if (item.TipoJornada == "Por Hora")
                        {
                            <td>
                                <span class="btn btn-success">
                                    @Html.ActionLink("Edit", "EditJornadaHora", new { id = item.idJornada }, new { data_modal = "" })
                                </span>
                                <span class="btn btn-info">
                                    @Html.ActionLink("Details", "Details", new { id = item.idJornada }, new { data_modal = "" })
                                </span>
                                <span class="btn btn-danger">
                                    @Html.ActionLink("Delete", "Delete", new { id = item.idJornada }, new { data_modal = "" })
                                </span>
                            </td>
                        }
                        @if (item.TipoJornada == "Contrato/Tarea")
                        {
                            <td>
                                <span class="btn btn-success">
                                    @Html.ActionLink("Edit", "EditJornadaContrato", new { id = item.idJornada }, new { data_modal = "" })
                                </span>
                                <span class="btn btn-info">
                                    @Html.ActionLink("Details", "Details", new { id = item.idJornada }, new { data_modal = "" })
                                </span>
                                <span class="btn btn-danger">
                                    @Html.ActionLink("Delete", "Delete", new { id = item.idJornada }, new { data_modal = "" })
                                </span>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>




<script>
        $(window).on("load resize ", function () {
            var scrollWidth = $('.tbl-content').width() - $('.tbl-content table').width();
            $('.tbl-header').css({ 'padding-right': scrollWidth });
        }).resize();
</script>