@model Modales.Models.Tbl_Prestamos

@{
    ViewBag.Title = "Edit " + @Html.DisplayFor(model => model.Tbl_Trabajador.Nombre) + " " + @Html.DisplayFor(model => model.Tbl_Trabajador.Apellido) + "'s loan registry";
}
@Scripts.Render("~/bundles/jqueryval")



<section>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="modal-shadow text-center">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4>@ViewBag.Title</h4>
                </div>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="panel-body">

                <div class="form-group">
                    <div class="text-center">
                        <span style="margin: 0 auto;">Amount or Value</span>
                        @Html.TextBoxFor(m => m.Monto,
                                  new
                                  {
                                      @class = "form-control",
                                      placeholder = @HttpUtility.HtmlDecode(Html.DisplayNameFor(m => m.Monto).ToHtmlString()),
                                      style = "margin: 0 auto;"
                                  })
                        @Html.ValidationMessageFor(m => m.Monto, "", new { @class = "text-info" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="text-center">
                        <span style="margin: 0 auto;">Date</span>
                        @Html.TextBoxFor(m => m.FechaPrestamo,
                             new
                             {
                                 @class = "form-control",
                                 placeholder = @HttpUtility.HtmlDecode(Html.DisplayNameFor(m => m.FechaPrestamo).ToHtmlString()),
                                 style = "margin: 0 auto;",
                                 type = "date",
                                 text = "Date"
                             })
                        @Html.ValidationMessageFor(m => m.FechaPrestamo, "", new { @class = "text-info" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="text-center">
                        <span style="margin: 0 auto;">Issuing</span>
                        @Html.TextBoxFor(m => m.EmisorPrestamo,
                                  new
                                  {
                                      @class = "form-control",
                                      placeholder = @HttpUtility.HtmlDecode(Html.DisplayNameFor(m => m.EmisorPrestamo).ToHtmlString()),
                                      style = "margin: 0 auto;"
                                  })
                        @Html.ValidationMessageFor(m => m.EmisorPrestamo, "", new { @class = "text-info" })
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    }
</section>