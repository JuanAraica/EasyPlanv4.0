<!DOCTYPE html>
<html>
<head>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("EasyPlan", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @if (@Html.Action("MostrarUser", "Home") != null)
                {
                <ul class="nav navbar-nav">
                    <li>@Html.Action("MostrarUser", "Home")</li>
                    
                </ul>
                }

                @if ((string)Session["user"] == null)
                {
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Login", "Login", null, new { data_modal = "" })</li>
            </ul>
                    
                }
                @if ((string)Session["user"] != null)
                {
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Logout", "LogOut", "Home")</li>
                <li>@Html.ActionLink("Registry", "Index", "Trabajador")</li>
            </ul>                    
                }



                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div> 
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Nivisix</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modalform")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<div id='modalGenerica' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='contentModal'></div>
        </div>
    </div>
</div>